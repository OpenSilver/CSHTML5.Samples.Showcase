<UserControl
    x:Class="OpenSilver.Samples.Showcase.GetRessourceStream_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenSilver.Samples.Showcase">
  <ContentControl Style="{StaticResource Card_Style}" Width="245">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <ContentControl Content="GetRessourceStream" Foreground="#FF3ED4B2" Background="#FF8FCBBE" Style="{StaticResource HeaderControl_Style}"/>
      <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,5,0,0">
        <Button Content="View SampleText.txt" Click="ViewFile_Click" Margin="0,0,0,10"/>
      </StackPanel>
      <Button Grid.Row="2" Content="VIEW SOURCE..." Margin="0,15,0,0"  Click="ButtonViewSource_Click" Background="#FF3ED4B2" Style="{StaticResource ButtonViewSource_Style}"/>
    </Grid>
  </ContentControl>
</UserControl>
