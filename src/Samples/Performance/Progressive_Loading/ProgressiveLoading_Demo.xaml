<UserControl
    x:Class="OpenSilver.Samples.Showcase.ProgressiveLoading_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.Samples.Showcase">
    <ContentControl Style="{StaticResource Card_Style}" Width="250">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="Progressive Loading" Foreground="#FFFCAB54" Background="#FFCCA376" Style="{StaticResource HeaderControl_Style}"/>
            <TextBlock Grid.Row="1" Foreground="Gray" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top">
                You can enable Progressive loading on all Panels as well as the DataGrid by setting their <Run FontWeight="Bold">ProgressiveRenderingChunkSize</Run> property. It will render items chunk by chunk rather than all at once. You can see it in action by moving around the different pages of this App.
            </TextBlock>
        </Grid>
    </ContentControl>
</UserControl>
