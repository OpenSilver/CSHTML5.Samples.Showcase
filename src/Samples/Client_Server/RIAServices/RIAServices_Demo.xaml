<UserControl
    x:Class="OpenSilver.Samples.Showcase.RIAServices_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.Samples.Showcase">
    <ContentControl Style="{StaticResource Card_Style}" Width="250">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="RIA Services" Foreground="#FFFCAB54" Background="#FFCCA376" Style="{StaticResource HeaderControl_Style}"/>
            <TextBlock Grid.Row="1" Foreground="Gray" FontSize="14" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top">
                You can make complex client/server Business Applications very quickly using RIA Services.
                See tutorial and documentation <Hyperlink NavigateUri="https://doc.opensilver.net/documentation/general/business-app.html" TargetName="_blank">here</Hyperlink>.
            </TextBlock>
        </Grid>
    </ContentControl>
</UserControl>
