<UserControl
    x:Class="OpenSilver.Samples.Showcase.NumericUpDown_Demo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="using:OpenSilver.Samples.Showcase">
    <ContentControl Style="{StaticResource Card_Style}" Width="180">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="NumericUpDown" Foreground="#FF3ADE8F" Background="#75B595" Style="{StaticResource HeaderControl_Style}"/>
            <NumericUpDown Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Minimum="0" Maximum="100" />
            <Button Grid.Row="2" Content="VIEW SOURCE..." Click="ButtonViewSource_Click" Background="#FF3ADE8F" Style="{StaticResource ButtonViewSource_Style}"/>
        </Grid>
    </ContentControl>
</UserControl>
